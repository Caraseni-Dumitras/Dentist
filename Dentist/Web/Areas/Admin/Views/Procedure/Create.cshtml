@{
    ViewData["Title"] = "Add new procedure";
}

@model Web.Areas.Admin.Models.ProcedureModels.ProcedureModel

<form asp-controller="Procedure" asp-action="Create" method="post">
    <div class="content-header">
        <div class="float-left">
            <a asp-action="List" class="btn btn-secondary">Back to list</a>
        </div>
        <div class="action-title">
            Add new Procedure
        </div>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                Save
            </button>
        </div>
    </div>
    
    @await Html.PartialAsync("_CreateOrUpdate", Model)
    
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}