@{
    ViewData["Title"] = "Procedures List";
}

@model Web.Areas.Admin.Models.ProcedureModels.ProcedureListAdminModel

<div class="text-end mb-3">
    <a asp-area="Admin" asp-controller="Procedure" asp-action="Create" class="btn btn-primary">Add new</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>CabinetNumber</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var procedure in Model.Data)
    {
        <tr>
            <td>@procedure.Name</td>
            <td>@procedure.Description</td>
            <td>@procedure.CabinetNumber</td>
            <td style="width: 160px">
                <a asp-area="Admin" asp-controller="Procedure" asp-action="Edit" asp-route-id="@procedure.Id" class="btn btn-primary">Edit</a> |
                <a asp-area="Admin" asp-controller="Procedure" asp-action="Delete" asp-route-id="@procedure.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    Showing @Model.Data.Count() of @Model.RecordsTotal records
</div>